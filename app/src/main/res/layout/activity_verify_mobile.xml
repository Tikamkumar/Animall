<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".signup.EnterMobileActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/icon"/>

        <Space
            android:layout_width="@dimen/_5sdp" android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animall.in"
            android:textColor="@color/primary"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="गाय भैंस वाला ऐप"
        android:layout_marginTop="-15dp"
        android:textColor="@color/primary"
        android:textSize="@dimen/_20ssp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP डाले"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"/>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"/>

    <com.chaos.view.PinView
        android:id="@+id/pinview"
        app:itemCount="6"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:itemBackground="@color/white"
        android:layout_gravity="center"
        app:lineColor="#12746D"
        android:inputType="number"
        app:itemSpacing="@dimen/_8sdp"
        android:cursorVisible="true"
        app:hideLineWhenFilled="false"
        app:itemRadius="10dp"
        style="@style/PinWidget.PinView"
        />
