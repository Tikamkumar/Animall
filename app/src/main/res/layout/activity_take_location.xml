<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.TakeLocationActivity">

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/img_welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mandatory_location"
        android:textAlignment="center"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

   <!--<TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/mandatory_location"
       android:textAlignment="center"
       android:layout_marginTop="@dimen/_10sdp"
       android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_permission_title"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_22sdp"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/cow_location"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/get_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textSize="@dimen/_12ssp"
        android:backgroundTint="@color/navy"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/give_location"/>

</LinearLayout>