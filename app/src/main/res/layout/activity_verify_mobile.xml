<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".signup.VerifyMobile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon"/>

        <Space
            android:layout_width="@dimen/_5sdp" android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animall.in"
            android:textColor="@color/navy"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(गाय भैंस वाला ऐप)"
        android:textColor="@color/navy"
        android:textSize="@dimen/_16ssp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP डाले"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"/>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"/>

    <com.chaos.view.PinView
        android:id="@+id/pinview"
        app:itemCount="6"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:itemBackground="@color/white"
        android:layout_gravity="center"
        app:lineColor="#12746D"
        android:inputType="number"
        app:itemSpacing="@dimen/_8sdp"
        android:cursorVisible="true"
        app:hideLineWhenFilled="false"
        app:itemRadius="15dp"
        style="@style/PinWidget.PinView"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/otp_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Otp sent to 6397801671"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_number"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp"/>

    </LinearLayout>
