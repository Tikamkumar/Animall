<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".signup.NameActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/icon"/>

        <Space
            android:layout_width="@dimen/_5sdp" android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animall.in"
            android:textColor="@color/primary"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="गाय भैंस वाला ऐप"
        android:layout_marginTop="-15dp"
        android:textColor="@color/primary"
        android:textSize="@dimen/_20ssp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="अपना नाम डाले"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#12746D"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/name"
            android:hint="यहाँ नाम लिखें"
            android:layout_margin="0dp"
            android:textSize="@dimen/_12ssp"
            android:textColorHint="#A7A1A8"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/validation_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="#CD0000"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="अपना नाम डाले 👆"/>

    <Button
        android:id="@+id/proceed_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="आगे बढे"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/custom_btn_bg"
        app:backgroundTint="@color/primary"
        android:textSize="@dimen/_14ssp"/>

</LinearLayout>